/* PageA/pages/companyphoto/companyphoto.wxss */
.custom-navbar {
  --td-navbar-color: #fff;
  --td-navbar-bg-color: #a5040d;
}
page {
  width: 100%;
  height: 100%;
}
.btnStyle{
  margin-top: 15px;
  margin-left: 40px;
  margin-right: 40px;
  font-size: 11pt;
  border: 2rpx solid cornflowerblue;
}

.imageStyle{
  margin-left: 5px;
  margin-right: 5px;
  height: 100px;
  width: 100px;
}

.switchStyle{
  margin-left: 20px;
  margin-right: 20px;
  font-size: 11pt;
}


#panel{
  height:45vh;
  background:#fff;
}

#panel text{
  line-height: 5vh;
}

.flex-row{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 5px;
  margin-bottom: 5px;
}
.flex-column{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: stretch;
  margin-top: 15px;
  border-radius: 5px;
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-bottom: 10px;
  background-color: white;
  padding: 10px;
  border: 1px solid #ccc;
}

.flex-rowleft{
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: left;
  margin-top: 5px;
  margin-bottom: 5px;
}

.flex-cell{
  flex: 1;
}

.buttonViewStyle{
  border: 1px solid #a5040d;
  border-radius: 5px;
  margin-left: 15px;
  background-color:#a5040d;
  padding: 8px;
  color: white;
}

.buttonViewStyleSearch{
  /* border: 1px solid #a5040d; */
  border-radius: 5px;
  margin-left: 10px;
  background-color:#a5040d;
  color: white;
  padding: 15rpx 30rpx;
  font-size: 14px;
}

.top{ 
    padding-top:8px;  
} 

.grid { display: -webkit-box; display: box; } 
.col-0 {-webkit-box-flex:0;box-flex:0;} 
.col-1 {-webkit-box-flex:1;box-flex:1;} 

.title { 
    height: 30px;  
    line-height: 30px;  
    width: 160rpx;  
    text-align: center;  
    display: inline-block;  
    font: 300 28rpx/30px "microsoft yahei";  
} 

.input_base { 
    border: 2rpx solid #ccc;  
    padding-left: 10rpx;  
    margin-right: 50rpx;  
} 
.input_h30{ 
    height: 30px;  
    line-height: 30px;  
} 

.btn_code{
  background-color: #666666;
  width: 180rpx;
  color: white;
  font-size: 25rpx;
  line-height: 60rpx;
  text-align: center;
  margin-right: 25px;
  font-weight: bold;
}

.radio-group {
    border-bottom: 1px solid #ddd;
    display:flex;
    flex-direction:column;
    margin-top: 5px;
    margin-bottom: 5px;
    justify-content:left;
    align-items:flex-start;
    margin-left: 10px;
}
.radio {
    border-top: 0px solid #ddd;
    padding: 5px;
    font-size: 14px;
    font-weight: bold;
}

radio .wx-radio-input{ 
    height: 40rpx; 
    width: 40rpx;
    margin-top: -4rpx;
    border-radius: 50%;
    border: 2rpx solid #999;
    background: transparent;
 }

radio .wx-radio-input.wx-radio-input-checked{
   border: none;
   background: #a5040d;
}
radio .wx-radio-input.wx-radio-input-checked::before{
   border-radius: 50%;
   width: 40rpx; 
   height: 40rpx; 
   line-height: 40rpx;
   text-align: center;
   font-size:30rpx; 
   color:#fff; 
   background: #a5040d;
   transform:translate(-50%, -50%) scale(1);
   -webkit-transform:translate(-50%, -50%) scale(1);
}
.button-example {
  margin: 0 32rpx;
}